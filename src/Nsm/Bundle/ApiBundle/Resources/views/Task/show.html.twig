{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Task</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('tasks_index') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('tasks_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
            <li>
                <a href="{{ path('tasks_remove', { 'id': entity.id }) }}">
                    Remove
                </a>
            </li></ul>
{% endblock %}
