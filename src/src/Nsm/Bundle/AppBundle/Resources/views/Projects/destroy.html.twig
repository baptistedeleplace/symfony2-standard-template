{% extends 'NsmAppBundle::layout.html.twig' %}

{% block page_breadcrumb %}
    <div class="Page-breadcrumbs">
        <a href='{{ path('project_browse') }}' data-pjax>Projects</a>
    </div>
{% endblock -%}

{% block page_title %}
    <h1 class="Page-title">Destroy Project</h1>
{% endblock -%}

{% block page_body -%}
    <form action="{{ path('project_delete', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(form) }}
        <p>
            <button type="submit">Destroy</button>
        </p>
    </form>
{% endblock -%}
