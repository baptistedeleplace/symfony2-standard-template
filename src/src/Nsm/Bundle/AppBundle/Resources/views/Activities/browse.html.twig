{% extends "NsmAppBundle::layout.html.twig" %}

{% set dataGridId = random() %}

{% block page_title %}
    <h1 class="Page-title">Activities</h1>
{% endblock %}

{% block page_actions -%}

    <a class="Button" href="{{ path('activity_add') }}">
        <span class="Button-label">Add</span>
    </a>
    <a class="Button" href="#">
        <span class="Button-label">Import</span>
    </a>
    <a class="Button" href="#filter" data-toggle="DataGrid-filter-toggle-{{ dataGridId }}">
        <svg class="Button-icon" viewBox="0 0 24 24">
            <g id="search"><path d="M15.5,14h-0.8l-0.3-0.3c1-1.1,1.6-2.6,1.6-4.2C16,5.9,13.1,3,9.5,3C5.9,3,3,5.9,3,9.5S5.9,16,9.5,16c1.6,0,3.1-0.6,4.2-1.6l0.3,0.3v0.8l5,5l1.5-1.5L15.5,14z M9.5,14C7,14,5,12,5,9.5S7,5,9.5,5C12,5,14,7,14,9.5S12,14,9.5,14z"></path></g>
        </svg>
        <span class="Button-label">Search</span>
    </a>

{% endblock %}

{% block page_body -%}
    {% include "NsmAppBundle:_dataGrid:dataGrid.html.twig" with {
        "pager": pager,
        "searchForm": searchForm,
        "dataGridId": dataGridId,
        "collectionTemplate": "Activities:_partials/collection"
    } only %}
{% endblock %}
