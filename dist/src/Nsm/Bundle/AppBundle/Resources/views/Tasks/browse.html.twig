{% extends 'NsmAppBundle::layout.html.twig' %}
{% form_theme search_form 'NsmFormBundle:Form:form_table_layout.html.twig' %}

{% set entities = pager.getCurrentPageResults %}

{% block page_body -%}

    <h1>Task list</h1>

    {{ form_start(search_form, {"attr": {"class": "Form", "novalidate": "novalidate"}}) }}
    <table>
        <tbody>
        {{ form_row(search_form.id) }}
        {{ form_row(search_form.title) }}
        {{ form_row(search_form.project) }}
        </tbody>
    </table>
    <div class="Form-actions">
        {{ form_row(search_form.search) }}
    </div>
    {{ form_end(search_form) }}

    <table>
        <caption>
            <span class="Pagination-currentPageRange">
                Displaying
                <span class="Pagingation-currentPageOffsetStart">{{ pager.currentPageFirstResultPositionInTotalResults }}</span> -
                <span class="Pagingation-currentPageOffsetEnd">{{ pager.currentPageLastResultPositionInTotalResults }}</span>
            </span>
            <span class="Pagination-totalResults">
                of
                <span class="Pagination-totalResultCount">{{ pager.totalResultCount }}</span>
                results
            </span>
        </caption>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Sub Tasks</th>
                <th>Project</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('task_read', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.subTasks.count }}</td>
                <td>{% if entity.project is null %}Foo{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('activity_add', { 'taskId': entity.id }) }}">create activity</a>
                    </li>
                    <li>
                        <a href="{{ path('task_read', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('task_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                    <li>
                        <a href="{{ path('task_destroy', { 'id': entity.id }) }}">destroy</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('task_add') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
